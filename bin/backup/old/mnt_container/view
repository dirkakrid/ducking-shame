#!/bin/env bash
clear
echo "###################################################################################################################################################################################"
echo "#ROOTFS"
ls /mnt/container/rootfs/
echo "#OVERLAYFS"
ls /mnt/container/overlayfs/
echo "#TMPFS"
ls /mnt/container/tmpfs/
echo "#RAWFS"
ls /mnt/container/rawfs/
echo "###################################################################################################################################################################################"
echo "#MOUNT"
ls /mnt/container/mount/
echo "#MAPPER"
ls /dev/mapper/
echo "###################################################################################################################################################################################"
echo "#KEYS..."
ls /mnt/container/key
echo "###################################################################################################################################################################################"
machinectl
echo "###################################################################################################################################################################################"
mount | grep /mnt/container
echo "###################################################################################################################################################################################"
# clean up time bitches
for i in $(ls ${TMPFS_});do
  if [[ $(mount | grep ${i}) ]];then
    echo "${i} dont delete"
  else
    echo "${i} delete"
  fi
done
for i in $(ls mount/);do
  if [[ $(mount | grep ${i}) ]];then
    echo "${i} dont delete"
  else
    echo "${i} delete"
  fi
done
# if in rawfs and empty in rootfs or overlayfs dont del if empty in rootfs or overlayfs and not in rawfs del...
